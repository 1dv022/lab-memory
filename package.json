

{

  "private": true,
  "engines": {
    "node": ">=0.10.0"
  },
  
  "devDependencies": {
    "bower": "latest",
    "jshint": "latest",
    "browserify" : "latest",
    "watch": "latest",
    "parallelshell": "latest",
    "http-server" : "latest",
    "live-reload" : "latest",
    "node-sass" : "latest"
  },

  "scripts": {
    "postinstall"   : "bower install",
    
    "serve"         : "http-server -p 9090 dist/",
    "livereload"    : "live-reload --port 9091 dist/",

    "browserify"    : "mkdir -p dist/scripts && browserify app/scripts/main.js > dist/scripts/main.js",
    "lint"          : "jshint app/scripts/*.js",
    "sass"          : "mkdir -p dist/styles && node-sass app/styles/* -r -o dist/styles/",

    "build:scripts" : "npm run browserify", 
    "watch:scripts" : "watch 'npm run build:scripts' app/scripts/",

    "build:markup"  : "",
    "watch:markup"  : "",

    "build:styles"  : "npm run sass",
    "watch:styles"  : "watch 'npm run build:styles' app/styles/",

    
    "build"         : "npm run build:scripts",
    "watch"         : "parallelshell 'npm run watch:scripts' 'npm run livereload' 'npm run serve' 'npm run watch:styles' 'npm run watch:markup'",

    "prebuild"      : "npm run lint",

    "clean": "rm -r dist/*"
  }
}
